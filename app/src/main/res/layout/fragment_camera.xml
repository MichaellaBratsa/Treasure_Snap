<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- Full-screen camera preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000" />

    <!-- Top translucent bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80212121"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“¸ TreasureSnap Camera"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button_bg_red"
            android:padding="8dp"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Bottom bar with camera actions -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#80212121"
        android:padding="24dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Scan QR -->
        <Button
            android:id="@+id/button_scan_qr"
            style="@style/CameraActionButtonStyle"
            android:text="ðŸ” Scan QR"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="12dp" />

        <!-- Capture Photo -->
        <Button
            android:id="@+id/button_take_photo"
            style="@style/CameraActionButtonStyle"
            android:text="ðŸ“¸ Capture"
            android:backgroundTint="#9C27B0"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
